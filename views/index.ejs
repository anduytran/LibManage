<!DOCTYPE html>
<html>
    <head>
        <meta name= "viewport" content="width=device-width, initial-scale = 1.0">
        <title>ManageLib</title>
        <link rel="stylesheet" href="style.css">
    </head>
    <ul class="topnav">
        <nav>
            <li id = "logo">
                <a href="#" class = "logo"><img src = "images/book.png" height= 60></a>
            </li>
            <li>
                <a>Books</a>
            </li>
            <li>
                <a>Events</a>
            </li>
            
            <li id = "search-by">
                <a href= "#">Search By</a>
                <ul class = "subnav">
                    <li><a href = "#">Title</a></li>
                    <li><a href = "#">Genre</a></li>
                    <li><a href = "#">Author</a></li>
                    <li><a href = "#">Location</a></li>
                    <li><a href = "#">Description</a></li>
                    <li><a href = "#"># of Copies</a></li>
                    <li><a href = "#">Versions</a></li>
                    <li><a href = "#">Type of Resource</a></li>
                    <li><a href = "#">Availability</a></li>
                    <li><a href = "#">Checkout History</a></li>
                </ul>
            </li>
            <li id="search">
                <form action = "" method = "get">
                    <input type = "text" name = "search-text" id = "search-text" class = "search" placeholder="Search..." required>
                    <button type = "button" class = "submit" name="search-button" id="search-button"></button>
                </form>
            </li>
            <button>Log In</button>
            <button class = "register">Sign Up</button>
        </nav>
    </ul>

    
    <div id="preview-gallery-container">

    </div>
    
    <script>
      var wrapper = document.getElementById("preview-gallery-container");
    
      var myHTML = '';
    
      for (var i = 0; i < 8; i++) {
        myHTML += '<div class = "preview-gallery"> \
                        <a target="_blank" href = "images/images.jpeg"> \
                            <img src="images/images.jpeg" alt = "Book" width = "183" height="276"> \
                        </a> \
                        <div class="title">Title...</div> \
                        <div class="author">by...</div> \
                    </div>' 
      }
    
      wrapper.innerHTML = myHTML
    
    </script>
    
    <div class="preview-gallery">
        <h2>All Books</h2>
        <br>
        <% books.forEach(book => { %>
            <h3><%= book.title %></h3>
            <h3><%= book.pages %></h3>
            <h3><%= book.stock %></h3>
            <h3><%= book.copies %></h3>
            <h3><%= book.genres %></h3>
            <br>
        <% }) %>
    </div>
   
</html>