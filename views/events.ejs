<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name= "viewport" content="width=device-width, initial-scale = 1.0">
        <title>ManageLib</title>
        <link rel="stylesheet" href="eventsStyle.css">
    </head>
<body>
    <div class="topnav">
        <nav>
            <a href="/" class = "logo"><img src = "images/book.png" height= 60></a>
            <a href="/">Books</a>
            <a href="/events">Events</a>
            <button class="dropdown">Genre</button>
            <form>
                <input class="search" placeholder="Search..." required>
                <button type="submit" class="submit"></button>
            </form>
            <button onclick="window.location.href='/login'">Log In</button>
            <button class="register" onclick="window.location.href='/signup'">Sign Up</button>
        </nav>
    </div>

    <div class="container">
        <h2>Upcoming Events</h2>
        
        <div id="preview-gallery-container">
            <% events.forEach(event => { %>
                <div class = "preview-gallery"> 
                    <div class="title"><%= event.title %></div> 
                    <div class="description"><%= event.description %></div>
                    <div class="date"><%= event.date.toDateString().substring(3,15) %></div>
                    <div class="time"><%= event.time %></div>
                    <img src="/images/library.jpg" alt = "Book" width = "350" height="auto"> 
                </div>
            <% }) %>
        </div>

        </div>
    </div>
</body>
</html>

