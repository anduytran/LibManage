<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name= "viewport" content="width=device-width, initial-scale = 1.0">
        <title>ManageLib</title>
        <link rel="stylesheet" href="style.css">
    </head>
<body>
    <ul class="topnav">
        <nav>
            <li id = "logo">
                <a href="/" class = "logo"><img src = "/images/logo.png" height= 60></a>

            </li>
            <li>
                <a href="/">Books</a>
            </li>
            <li>
                <a href="/events">Events</a>
            </li>
            
            <li id="search">
                <form action="/books/search" method="get">
                    <select name="search-filter" id="search-filter">
                        <option value="title">Title</option>
                        <option value="genre">Genre</option>
                        <option value="author">Author</option>
                        <option value="publisher">Publisher</option>
                        <option value="stock">Stock</option>
                    </select>

                    <input type="text" name="search-text" id="search-text" class="search" placeholder="search">
                    <button type="button" class="submit" name="search-button" id="search-button"></button>
                </form>
            </li>
            <button class = "login" onclick="window.location.href='/login'">Log In</button>
        </nav>
    </ul>

    <div>
        <h2>Upcoming Events</h2>
        
        <div id="preview-gallery-container">
            <% events.forEach(event => { %>
                <div class = "preview-gallery"> 
                    <div class="title"><%= event.title %></div> 
                    <div class="description"><%= event.description %></div>
                    <div class="date"><%= event.date.toDateString().substring(3,15) %></div>
                    <div class="time"><%= event.time %></div>
                    <img src=<%= event.image %> alt="Book" width="350" height="auto"> 
                </div>
            <% }) %>
        </div>

        </div>
    </div>
</body>
</html>

